<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6e6e6"
    tools:context="com.example.fady.finaal.ProductInfo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="300dp"
                app:srcCompat="@android:color/darker_gray"
                android:contentDescription="@string/app_name" />

            <GridView
                android:id="@+id/gridView1"
                android:layout_margin="5dp"
                android:columnWidth="100dp"
                android:drawSelectorOnTop="true"
                android:gravity="center"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp"
                android:listSelector="@color/cardview_shadow_start_color"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:text="Product Title :"
                android:paddingLeft="4dp"
                android:textColor="#99ccff"
                android:textStyle="bold" />
            <TextView
                android:gravity="center"
                android:id="@+id/txtName"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:textColor="#99ccff"
                    android:paddingLeft="4dp"
                    android:text="Description :"
                    android:layout_width="100dp"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/txtDescrip"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:textColor="#99ccff"
                    android:paddingLeft="4dp"
                    android:text="Price :"
                    android:layout_width="100dp"
                    android:layout_height="40dp" />
                <TextView
                    android:gravity="center"
                    android:id="@+id/txtPrice"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:textColor="#99ccff"
                    android:paddingLeft="4dp"
                    android:text="Wholesale Pirce :"
                    android:layout_width="120dp"
                    android:layout_height="40dp" />
                <TextView
                    android:gravity="center"
                    android:id="@+id/txtSalePrice"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:textColor="#99ccff"
                    android:paddingLeft="4dp"
                    android:text="Date Added :"
                    android:layout_width="100dp"
                    android:layout_height="40dp" />
                <TextView
                    android:gravity="center"
                    android:textSize="16sp"
                    android:id="@+id/txtDate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:paddingLeft="4dp"
                    android:textColor="#99ccff"
                    android:text="Condition :"
                    android:layout_width="100dp"
                    android:layout_height="40dp" />
                <TextView
                    android:gravity="center"
                    android:textSize="16sp"
                    android:id="@+id/txtCondit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:paddingLeft="4dp"
                    android:textColor="#99ccff"
                    android:text="Available! :"
                    android:layout_width="100dp"
                    android:layout_height="40dp" />
                <TextView
                    android:gravity="center"
                    android:textSize="16sp"
                    android:id="@+id/txtAvailb"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:paddingLeft="4dp"
                    android:textColor="#99ccff"
                    android:text="Info :"
                    android:layout_width="100dp"
                    android:layout_height="40dp" />
                <TextView
                    android:gravity="center"
                    android:id="@+id/txtInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
